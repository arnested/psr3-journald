{
    "name": "arnested/psr3-journald",
    "type": "library",
    "description": "PSR-3 logging to systemd's journald",
    "keywords":  ["psr3", "psr-3", "log", "logger", "systemd", "journald", "ffi"],
    "homepage": "https://github.com/arnested/psr3-journald",
    "license": "MIT",
    "authors": [
        {
            "name": "Arne JÃ¸rgensen",
            "email": "arne@arnested.dk",
            "homepage": "https://arnested.dk"
        }
    ],
    "provide": {
        "psr/log-implementation": "3.0.0"
    },
    "require": {
        "php": ">=8.1",
        "psr/log": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Arnested\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-deprecation-rules": "^2",
        "phpstan/phpstan-symfony": "^2",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "sort-packages": true,
        "lock": false,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
